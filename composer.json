{
    "name": "erth0/posty",
    "description": "Posty is a simple way to manage your blog articles from the comfort of your computer with a simple to use CLI.",
    "keywords": ["articles", "posty-laravel-zero", "laravel-zero", "console", "command", "posty", "posty-cli", "laravel-posty-cli", "posty-console"],
    "type": "project",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/erth0/posty/issues",
        "source": "https://github.com/erth0/posty"
    },
    "authors": [
        {
            "name": "Eluert Mukja",
            "email": "e.mukja@icloud.com"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "guzzlehttp/guzzle": "^6.5.5",
        "illuminate/http": "^8.0",
        "laminas/laminas-text": "^2.7",
        "spatie/laravel-sluggable": "^2.6",
        "spatie/yaml-front-matter": "^2.0",
        "symfony/yaml": "^5.1"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9.1",
        "fzaninotto/faker": "^1.9",
        "laravel-zero/framework": "^8.0",
        "mockery/mockery": "^1.4.2",
        "pestphp/pest": "^0.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": [
        "builds/posty"
    ],
    "scripts": {
        "post-create-project-cmd": [
            "@php application app:rename"
        ]
    }
}
